generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ------------------ ENUMS ------------------
enum Role {
  SUPER_ADMIN
  VENDOR
  CUSTOMER
}

// ------------------ USER TABLE ------------------
model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String
  roles     Role[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Role-specific relations
  vendorId  String?   @unique
  customerId String?  @unique
}
